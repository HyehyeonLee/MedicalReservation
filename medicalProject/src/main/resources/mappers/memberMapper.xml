<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.medical.mapper.memberMapper">
	<!-- 회원가입 -->
	<insert id="insertMember">
		INSERT INTO medical.p_member(id,pw,name,postcode,addr,detailAddress,extraAddress,tel,birth,email) VALUES (#{id},#{pw},#{name},#{postcode},#{addr},#{detailAddress},#{extraAddress},#{tel},#{birth},#{email})
	</insert>
	<!-- 로그인 -->
	<select id="loginMember" resultType="java.lang.Integer">
		SELECT COUNT(*) FROM medical.p_member WHERE id=#{id} AND pw=#{pw}
	</select>
	<!-- 아이디 중복체크  -->
	<select id="idCheck" resultType="int">
		SELECT COUNT(*) FROM medical.p_member WHERE id=#{id}
	</select>
</mapper>